#post
  .pjax
    article
      .codeBlockContainer
        background-color: #b6c6d024;
        border-radius: 10px;
      .codeBlockTitle
        border-bottom: 2px solid #dadde1;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
        font-weight: 500;
        padding: 10px 15px;
        margin-bottom: -15px;
        font-family: Menlo, Monaco, Consolas, Courier New, monospace;
      .codeBlockLines
        display: flex;
        flex-direction: column;
        border-radius: 10px;
        background-color: #b6c6d024;
        overflow-x: auto;
        .marked
          background-color: #dddfe1;
          margin: 0px -15px;
          padding: 0px 15px;

